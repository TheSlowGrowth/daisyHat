{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "LIBDAISY_DIR=../../../EurorackReverb/firmware/lib/libDaisy"
            ],
            "options": {
                "cwd": "${workspaceRoot}/device/libDaisyHat"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/device/libDaisyHat"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}